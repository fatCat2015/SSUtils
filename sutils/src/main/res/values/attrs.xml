<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WheelView">
        <attr name="visibleItemCount" format="integer"></attr>
        <attr name="startColor" format="color"></attr>
        <attr name="endColor" format="color"></attr>
        <attr name="scaleValue" format="float"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="centerLineColor" format="color"></attr>
        <attr name="centerLineWidth" format="dimension"></attr>

    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_shadow_radius" format="dimension"></attr>
        <attr name="sl_shadow_color" format="color"></attr>
        <attr name="sl_shadow_dx" format="dimension"></attr>
        <attr name="sl_shadow_dy" format="dimension"></attr>

        <attr name="sl_corner_radius" format="dimension"></attr>

        <attr name="sl_shadow_side" format="flags">
            <flag name="left" value="1"></flag>
            <flag name="top" value="2"></flag>
            <flag name="right" value="4"></flag>
            <flag name="bottom" value="5"></flag>
            <flag name="all" value="15"></flag>

        </attr>

    </declare-styleable>
</resources>