<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ChildDraggableView">
        <attr name="draggable_child_id" format="reference"></attr>
        <attr name="action_when_release" format="enum">
            <enum name="keepState" value="0"></enum>
            <enum name="backToOri" value="1"></enum>
            <enum name="attachToSide" value="2"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="DrawerLayout">
        <attr name="drawer_view_id" format="reference"></attr>
        <attr name="max_dim_value" format="float"></attr>
        <attr name="drawer_direction" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="CodeEditText">
        <attr name="code_text_background" format="reference"></attr>

        <attr name="code_length" format="integer"></attr>

        <attr name="code_interval" format="dimension"></attr>

        <attr name="code_text_size" format="dimension"></attr>
        <attr name="code_text_color" format="color"></attr>
        <attr name="code_text_bold" format="boolean"></attr>

        <attr name="code_cursor_color" format="color"></attr>
        <attr name="code_cursor_width" format="dimension"></attr>
        <attr name="code_cursor_height" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="ShadowViewContainer">
        <attr name="svc_shadow_radius" format="dimension"></attr>
        <attr name="svc_shadow_color" format="color"></attr>
        <attr name="svc_shadow_slide" format="flags">
            <flag name="start" value="1"></flag>
            <flag name="top" value="2"></flag>
            <flag name="end" value="4"></flag>
            <flag name="bottom" value="8"></flag>
        </attr>
    </declare-styleable>

</resources>
